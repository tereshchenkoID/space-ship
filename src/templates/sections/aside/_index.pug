mixin aside
  aside.aside&attributes(attributes)
    .aside__body
      .navigation.js-navigation
        +navigation-tab(['All bets', 'My Bets', 'Top']).js-navigation-tab
        .navigation-body(data-tab="all_bets").navigation-body--active.js-navigation-body
          .bet-table
            .bet-table__header
              .bet-table__container
                p.total-bets
                  span.total-bets-label Total bets:
                  span.total-bets-value
                .js-previous-multiply
                +previous-hand(type="button").button.button--outline.js-previous-hand
              .bet-table__row
                .bet-table__cell User
                .bet-table__cell
                .bet-table__cell Bet
                .bet-table__cell Mult.
                .bet-table__cell Cash out
            .bet-table__content.js-bet-table-stakes
            +previous-table.js-previous-table

        .navigation-body(data-tab="my_bets").js-navigation-body
          .bet-table.bet-table--custom
            .bet-table__header
              .bet-table__row
                .bet-table__cell Date
                .bet-table__cell Bet
                .bet-table__cell Mult.
                .bet-table__cell Cash out
            .bet-table__content.js-bet-table-my-bets
        .navigation-body(data-tab="top").js-navigation-body
          .bet-table
            .bet-table__content(style="overflow: unset")
              .navigation.js-navigation
                +navigation-tab(['Huge Wins', 'Biggest Wins', 'Multipliers']).js-navigation-tab
                .navigation-body(data-tab="huge_wins").navigation-body--active.js-navigation-body
                  .navigation.js-navigation
                    +navigation-sort(['Day', 'Month', 'Year']).js-navigation-sort
                    .navigation-body(data-tab="day").navigation-body--active.js-navigation-body.js-huge-wins-list
                .navigation-body(data-tab="biggest_wins").js-navigation-body
                  .navigation.js-navigation
                    +navigation-sort(['Day', 'Month', 'Year']).js-navigation-sort
                    .navigation-body.navigation-body--active.js-navigation-body
                      .huge-win
                        .huge-win__cell
                          .huge-win__logo
                            img(src="https://aviator-demo.spribegaming.com/assets/static/avatars/v2/av-2.png?v=4.1.1").img
                          .huge-win__nickname d****5
                        .huge-win__cell
                          .huge-win__info
                            .huge-win__label Cashed out:
                            .huge-win__value
                              span 22804.19
                              span x
                          .huge-win__info
                            .huge-win__label Win:
                            .huge-win__value.huge-win__value--win
                              span 22804.19
                              span $
                          .huge-win__info
                            .huge-win__label Multiplier:
                            .huge-win__multiply
                              span 600.00
                              span x
                        .huge-win__cell
                          +bet-tooltip
                          +fairness('data-round="786d8310663cf442aa3a58358545351c').js-bet-multiply
                          +copy.js-bet-copy

                .navigation-body(data-tab="multipliers").js-navigation-body
                  .navigation.js-navigation
                    +navigation-sort(['Day', 'Month', 'Year']).js-navigation-sort
                    .bet-item.bet-item--custom.bet-item--transparent
                      .bet-item__cell Date
                      .bet-item__cell Mult.
                      .bet-item__cell Fairness
                    .navigation-body.navigation-body--active.js-navigation-body
                      .bet-item.bet-item--custom
                        .bet-item__cell
                          .bet-item__date
                            span 04:10:13
                        .bet-item__cell
                          .bet-item__value
                            span 1060.67
                            span x
                        .bet-item__cell
                          +fairness('data-round="786d8310663cf442aa3a58358545351c').js-bet-multiply
                          +copy.js-bet-copy
    .aside__footer
      .aside__wrapper
        p This game is
        button.button.js-provably-fair
          .button__icon
            img(src="./img/icon/fairness.svg").img
          p Provably Fair
      p Powered by Space-Ship
