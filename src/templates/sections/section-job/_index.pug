mixin section-job
  section.section&attributes(attributes)
    .container-fluid
      .container
        .grid
          .grid__column
            .job
              .job__header
                .job__logo
                  img(src="https://rekroot.themes.zone/classic/wp-content/uploads/sites/14/2021/04/logo8-150x150.png").img
                div
                  h3.job__title E-Commerce Web Designer
                  .job__meta
                    p.job__name Rival Gaming
                    p.job__posted Posted 11 months ago
                    a(href="#").job__link Frontend Development IT Consulting

